// Critical hit system
// Rolls CritRate on each hit, multiplies damage and knockback on success
(
    vars: {
        Custom("CritRate"): 0.2,
        Custom("CritMultiplier"): 2.5,
    },
    on_pre_hit: [(
        conditions: [Roll(Custom("CritRate"))],
        effects: [
            SetTrue(IsCrit),
            MultiplyBy(HitDamage, Custom("CritMultiplier")),
            Multiply(HitForceRadial, 2.5),
        ],
    )],
)
